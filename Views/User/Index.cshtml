<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Clever Ideas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    @model ViewModel
</head>
<body>
    <div class="container">
        <nav class="navbar sticky-top navbar-dark bg-dark">
        <span class="navbar-brand">Clever Ideas</span>
        <span style="color: green; font-size: 20px;">@TempData["success"]</span>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class='nav-link' href="/">Home</a>
            </li>
        </ul>
        </nav><br>
        <div class="main_content">
        <div class="reg">
            <h1>Registration</h1>
            <table>
                <form class="form" asp-action="RegisterUser" asp-controller="User" method="post">
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="RegisterUser.Name"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="RegisterUser.Name">Name:</label></td>
                        <td><input asp-for="RegisterUser.Name" type="text"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="RegisterUser.Alias"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="RegisterUser.Alias">Alias:</label></td>
                        <td><input asp-for="RegisterUser.Alias" type="text"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="RegisterUser.Email"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="RegisterUser.Email">Email:</label></td>
                        <td><input asp-for="RegisterUser.Email" type="text"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="RegisterUser.Password"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="RegisterUser.Password">Password:</label></td>
                        <td><input asp-for="RegisterUser.Password" type="password"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="RegisterUser.Confirm"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="RegisterUser.Confirm">Confirm Password:</label></td>
                        <td><input asp-for="RegisterUser.Confirm" type="password"></td>
                    </tr>
                    <tr>
                        <td><button class="btn btn-primary">Register</button></td>
                    </tr>
                </form>
            </table>
        </div>
        <div class="log">
            <h1>Login</h1>
            <table>
                <form class="form" asp-action="LoginUser" asp-controller="User" method="post">
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="LoginUser.LogEmail"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="LoginUser.LogEmail">Email:</label></td>
                        <td><input asp-for="LoginUser.LogEmail" type="text"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span class="error" asp-validation-for="LoginUser.LogPassword"></span></td>
                    </tr>
                    <tr>
                        <td><label asp-for="LoginUser.LogPassword">Password:</label></td>
                        <td><input asp-for="LoginUser.LogPassword" type="password"></td>
                    </tr>
                    <tr>
                        <td><button class="btn btn-success">Login</button></td>
                    </tr>
                </form>
            </table>
        </div>
        </div>
    </div>
</body>
</html>